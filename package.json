{
  "name": "iobroker.xmpp",
  "version": "0.0.2",
  "description": "A XMPP Client that interconnects iobroker with your XMPP server. Send messages to your account or trigger actions by messages to this bot.",
  "author": {
    "name": "ANB777",
    "email": "iobroker.xmpp@txtng.eu"
  },
  "homepage": "https://github.com/ANB777/ioBroker.xmpp",
  "license": "MIT",
  "keywords": [
    "xmpp",
    "bot",
    "commands",
    "selfhosted"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:ANB777/ioBroker.xmpp.git"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.1.6",
    "@types/xmpp__client": "^0.13.0",
    "@types/xmpp__debug": "^0.13.0",
    "@xmpp/client": "^0.13.1",
    "@xmpp/debug": "^0.13.0",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^2.2.2",
    "@iobroker/adapter-dev": "^1.0.1",
    "@iobroker/testing": "^4.1.3",
    "@iobroker/dev-server": "^0.7.3",
    "@tsconfig/node18": "^18.2.4",
    "@types/chai": "^4.3.3",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^10.0.7",
    "@types/node": "^18.11.9",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.8",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.23.0",
    "mocha": "^10.7.3",
    "proxyquire": "^2.1.3",
    "rimraf": "^3.0.2",
    "sinon": "^13.0.2",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "~5.5.4"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint --ext .ts src/",
    "translate": "translate-adapter",
    "release": "release-script",
    "dev-server": "dev-server"
  },
  "bugs": {
    "url": "https://github.com/ANB777/ioBroker.xmpp/issues"
  },
  "readmeFilename": "README.md"
}
